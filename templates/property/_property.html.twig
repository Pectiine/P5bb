<div class="card mb-4">
	{% if property.picture %}
		<img src="{{vich_uploader_asset(property.picture, 'imageFile')|imagine_filter('thumb')}}" alt="card image" class="card-img-top">
	{% else %}
		<img src="{{"/images/empty.jpg"|imagine_filter('thumb')}}" alt="card image" class="card-img-top">
	{% endif %}

	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path('property.show', {slug:property.slug, id: property.id}) }}">{{property.title}}</a>
		</h5>

		<p class="card-text">
			-
			{{property.city}}
			({{property.postalCode}})
		</p>
		<div class="text-success" style="font-size:1.02rem;font-weight:bold;">
			{{property.formattedPrice}}
			â‚¬ prix moyen
		</div>
	</div>
</div>
